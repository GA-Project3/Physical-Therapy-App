<!-- Doctor information -->
<div class='col-md-2'><img class = 'image' src="<%= @doctor.image_url %>" alt="image for doctor" width='150px'></div>
<div class='col-md-10'>
  <div><h2><%= @doctor.first_name + " " + @doctor.last_name %></h2></div>
  <div><b>Email:</b> <%= @doctor.email %></div>
  <div><b>Phone:</b> <%= @doctor.phone %></div>
  <div><b>Location:</b> <%= @doctor.location %></div>
  <div><b>Bio:</b> <%= @doctor.description %></div>
  <div><b>Member Since:</b> <%= @doctor.created_at.strftime("%b %d, %Y") %></div>
</div>
<div class="clearfix"></div>




  <div>
    <% if current_user != nil %>
      <% if current_user.user_t == 'patients' %>
          <form action='/patients/<%= @patient.id %>/edit' method='get'>
              <button> Edit Profile </button>
          </form>
        <%end%>

      <div>
        <h1>Patients</h1>
      </div>
      <!--  show doco for this doctor -->

        <div class='col-md-1'>
          <img src="<%= patient.image_url %>" width="80px" alt="patient image"/>
        </div>
        <div class='col-md-11'>
          <h4><a href="/patients/<%=patient.id%>"><%= patient.first_name%>  <%= patient.last_name%></a></h4>
          <%= patient.diagnosis %>
        </div>
        <div class="clearfix"></div>
        <hr>
      <% end %>
    <!-- end of patient list -->





  </div>


