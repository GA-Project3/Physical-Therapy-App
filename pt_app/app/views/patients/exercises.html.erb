<!-- /patient/exercises view page-->
<div class="container">

	<div class="row">
		<h1><%= @patient.first_name  + " " + @patient.last_name %></h1>

		<% @exercises.each do |exercise| %>
			<h3><%= exercise.title %></h3>
			<%= exercise.description %>
			<img src="<%= exercise.image_url %>" width="200"/>


			<div class="row">
				<% if @patient_exercises.include? (exercise) %>
					<%= button_to "Remove", {}, :disabled => true %>
				<% else %>
					<button>Add</button>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
